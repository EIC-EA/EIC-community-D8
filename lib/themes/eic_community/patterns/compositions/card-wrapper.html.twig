{% set _card = card|default({})|without('authors') %}

<div class="ecl-card-wrapper">
  {% include "@ecl-twig/ec-component-card/ecl-card.html.twig" with _card %}
  {% if card.authors %}
    <div class="ecl-card">
      {% for author in card.authors %}
        {% include "@theme/patterns/components/author.html.twig" with {
          author: author.author,
          image: author.image,
        } only %}
      {% endfor %}
    </div>
  {% endif %}
</div>
