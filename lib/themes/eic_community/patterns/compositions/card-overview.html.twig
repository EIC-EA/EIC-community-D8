{% set title_element = title_element|default('h2') %}

<section class="ecl-card-overview">
  <div class="ecl-container">
    {% if title is not empty %}
      <{{ title_element }} class="ecl-card-overview__title">{{ title }}</{{ title_element }}>
    {% endif %}

    {% if description is not empty %}
      <div class="ecl-card-overview__description">
        {{ description }}
      </div>
    {% endif %}

    <div class="ecl-card-overview__items">
      {% for item in items %}
        <div class="ecl-card-overview__item">
          {% include "@ecl-twig/ec-component-card/ecl-card.html.twig" with item|default({}) %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>
