{% extends "@theme/patterns/layout/base.html.twig" %}

{% block page_header %}
  {% include "@theme/patterns/compositions/editorial-header.html.twig" with editorial_header|default({})|without('title') only %}
{% endblock %}

{% block content %}
  {% include "@theme/patterns/compositions/member-information-block.html.twig" with {
    icon_file_path: icon_file_path,
    description: description,
    title: title,
    job_titles: job_titles,
    social_share: social_share,
    sidebar_title: sidebar_title,
    meta: meta,
    type: type,
    image: image,
    stats: stats,
    actions: actions,
    top_contributor: top_contributor
  } only %}

  {% include "@theme/patterns/compositions/featured-content-sections.html.twig" with {
    as_tabs: true,
    items: [
      flagged_interests|default({}),
      flagged_groups|default({}),
      flagged_events|default({}),
      flagged_projects|default({}),
    ]
  } only %}
{% endblock %}
