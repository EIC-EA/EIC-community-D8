{% set title_element = title_element|default('h3') %}

{% if items is not empty %}
<div class="ecl-featured-list {{ is_collapsible ? 'ecl-featured-list--is-collapsible' }} {{ grid ? 'ecl-featured-list--has-grid-layout' }} ecl-featured-list--is-tag {{ extra_classes }}">
    {% if title is not empty %}
      {% if title is not empty %}
        <{{ title_element }} class="ecl-editorial-article__aside__title">{{ title }}</{{ title_element }}>
      {% endif %}
    {% endif %}
    <div class="ecl-featured-list__items-wrapper">
      <div class="ecl-featured-list__items">
        {% for item in items %}
          <div class="ecl-featured-list__item">
            {% include '@ecl-twig/ec-component-tag/ecl-tag.html.twig' with item %}
          </div>
        {% endfor %}
        {% if is_collapsible %}
          <div class="ecl-featured-list__item ecl-featured-list__item--expand ecl-featured-list__item--expand--tag">
            <button class="ecl-tag ecl-featured-list__expand">
              {% include '@ecl-twig/ec-component-icon/ecl-icon.html.twig' with {
                icon: {
                  size: 'xs',
                  path: icon_file_path,
                  type: 'custom',
                  name: 'plus',
                }
              } only %}
              {{ expand_label }}
            </button>
          </div>
          <div class="ecl-featured-list__item ecl-featured-list__item--expand ecl-featured-list__item--expand--tag ecl-featured-list__item--collapse">
            <button class="ecl-tag ecl-featured-list__collapse">
              {% include '@ecl-twig/ec-component-icon/ecl-icon.html.twig' with {
                icon: {
                  size: 'xs',
                  path: icon_file_path,
                  type: 'custom',
                  name: 'less',
                }
              } only %}
              {{ collapse_label }}
            </button>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
{% endif %}
