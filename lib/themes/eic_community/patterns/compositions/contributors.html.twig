{% set title_element = title_element|default('h3') %}

{% if items is not empty %}
  <div class="ecl-contributors">
    {% if title is not empty %}
      {% if title is not empty %}
        <{{ title_element }} class="ecl-contributors__title">{{ title }}</{{ title_element }}>
      {% endif %}
    {% endif %}

    <div class="ecl-contributors__items">
      {% for item in items %}
        <div class="ecl-contributors__item">
          {% include "@theme/patterns/components/author.html.twig" with item|default({})|merge({
            size: 'medium'
          }) only %}
        </div>
      {% endfor %}
    </div>
  </div>
{% endif %}
