{% set title_element = title_element|default('h3') %}

{% if items is not empty %}
  <div class="ecl-social-share ecl-featured-list">
    {% if title is not empty %}
      {% if title is not empty %}
        <{{ title_element }} class="ecl-social-share__title">{{ title }}</{{ title_element }}>
      {% endif %}
    {% endif %}

    <div class="ecl-social-share__items">
      {% for item in items %}
        <div class="ecl-social-share__item{{ item.name ? ' ecl-social-share__item--' ~ item.name }}">
          {% if item.path %}
            <a class="ecl-social-share__item-wrapper" href="{{ item.path }}">
              {% if icon_file_path %}
                <span class="ecl-social-share__item-icon-wrapper">
                  {% include '@ecl-twig/ec-component-icon/ecl-icon.html.twig' with {
                    icon: {
                      size: 'm',
                      path: icon_file_path,
                      type: item.type|default('branded'),
                      name: item.name,
                    },
                    extra_attributes: {
                      'aria-hidden': 'true',
                      'focusable': 'false'
                    }
                  } %}
                </span>
              {% endif %}
              {% if item.label is not empty %}
                <span class="ecl-social-share__item-label">{{ item.label }}</span>
              {% endif %}
            </a>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
{% endif %}
