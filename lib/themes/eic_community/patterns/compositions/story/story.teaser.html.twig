{% set title_element = title_element|default('h2') %}

<div class="ecl-teaser ecl-teaser--story">
  {% if image is not empty %}
    <figure class="ecl-teaser__media-wrapper">
      <img src="{{ image }}" class="ecl-teaser__media-wrapper" />
    </figure>
  {% endif %}
  <div class="ecl-teaser__main-wrapper">
    <div class="ecl-teaser__meta-header">
      {% if type is not empty %}
        <span class="ecl-teaser__type">
          {% if icon_file_path and icon %}
             {% include "@ecl-twig/ec-component-icon/ecl-icon.html.twig" with {
                extra_classes: 'ecl-teaser__type-icon',
                icon: {
                  path: icon_file_path,
                  name: icon.name,
                  size: 'm',
                  type: icon.type,
                },
                extra_attributes: {
                  'aria-hidden': 'true',
                  'focusable': 'false'
                }
              } only %}
              {{ type }}
          {% endif %}
        </span>
      {% endif %}

      {% include "@theme/patterns/components/timestamp.html.twig" with timestamp|default({}) %}
    </div>

    <{{ title_element }} class="ecl-teaser__title">{{ title }}</{{ title_element }}>

    {% if description is not empty %}
      <p class="ecl-teaser__description">{{ description }}</p>
    {% endif %}

    <div class="ecl-teaser__meta-footer">
      {% include "@theme/patterns/components/author.html.twig" with author|default({}) %}
    </div>
  </div>
</div>
