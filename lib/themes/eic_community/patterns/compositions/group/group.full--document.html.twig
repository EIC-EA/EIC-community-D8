{% extends "@theme/patterns/compositions/group/group.full.html.twig" %}

{% block content %}
  {% include "@theme/patterns/compositions/teaser-overview.html.twig" with {
    amount_options: amount_options,
    active_filters: active_filters,
    sort_options: sort_options,
    items: items,
    extra_classes: 'ecl-teaser-overview--has-blocks',
    icon_file_path: common.icon_file_path,
  } only %}

  {% include "@theme/patterns/compositions/pagination.html.twig" with pagination|default({}) only %}
{% endblock %}

{% block sidebar %}
  {% set sidebar_action = sidebar_action|merge({'extra_classes': " ecl-collapsible-options--actions ecl-collapsible-options--full-width"}) %}
  {% include "@theme/patterns/compositions/collapsible-options.html.twig" with sidebar_action only %}
  {% include "@theme/patterns/compositions/filter-sidebar.html.twig" with {
    icon_file_path: common.icon_file_path,
    title: filter_title,
    items: filters,
  } only %}
{% endblock %}
