{% extends "@theme/patterns/layout/base.html.twig" %}

{% block page_header %}
  {% include "@theme/patterns/compositions/overview-header.html.twig" with {
    title_element: 'h1',
    title: title,
    image: image,
  } only %}

  {% include "@theme/patterns/compositions/breadcrumb.html.twig" with breadcrumb|default({}) only %}

  {% include "@theme/patterns/compositions/search/searchform.html.twig" with searchform|default({}) only %}
{% endblock %}

{% block content %}
  {% include "@theme/patterns/compositions/teaser-overview.html.twig" with {
    icon_file_path: common.icon_file_path,
    no_items_available: no_items_available,
    no_items_available_header: no_items_available_header,
    title: NULL,
  } %}

  {% if items and items is not empty %}
    {% include "@theme/patterns/compositions/pagination.html.twig" with pagination|default({}) only %}
  {% endif %}
{% endblock %}

{% block sidebar %}
  {% include "@theme/patterns/compositions/filter-sidebar.html.twig" with {
    icon_file_path: common.icon_file_path,
    title: filter_title,
    items: filters,
  } only %}
{% endblock %}
