{% set _wrap_content = true %}

{% extends "@theme/patterns/layout/base.html.twig" %}

{% block page_header %}
  {% embed '@theme/patterns/compositions/editable-hero-banner.html.twig' with hero|default({}) %}
    {% block content %}
      {% if insertion is not empty %}
        <span class="ecl-description">{{ insertion }}</span>
      {% endif %}

      {% if title is not empty %}
        <h1 class="ecl-title ecl-title--display1">{{ title }}</h1>
      {% endif %}

      {% if description is not empty %}
        <p class="ecl-description">{{ description }}</p>
      {% endif %}

      {% include "@theme/patterns/components/inline-actions.html.twig" with {
        items: actions
      } %}
    {% endblock %}
  {% endembed %}
  {% include "@theme/patterns/compositions/breadcrumb.html.twig" with breadcrumb|default({}) %}
{% endblock %}

{% block content %}
  {% include "@theme/patterns/compositions/card-overview.html.twig" with usp|default({})|merge({
    extra_classes: 'ecl-card-overview--is-compact'
  }) only %}

  {% include "@theme/patterns/compositions/fact-figures-wrapper.html.twig" with fact_figures|default({}) %}

  {% include "@theme/patterns/compositions/featured-content-grid.html.twig" with featured_content|default({}) %}

  {% include "@theme/patterns/compositions/fact-figures-wrapper.html.twig" with fact_figures|default({}) %}


  {% embed "@theme/patterns/compositions/layout-block.html.twig" %}
    {% block content %}
      {% include "@theme/patterns/compositions/bulletin-block.html.twig" with bulletin_block|default({}) %}
    {% endblock %}
  {% endembed %}
{% endblock %}
