{#
/**
 * @file
 * Theme override to display a node page teaser.
 *
 * @see ./themes/custom/eic_community/templates/content/node.html.twig
 */
#}
{% extends "@eic_community/content/node.html.twig" %}
{% set display_submitted = false %}
{% set has_wrapper = false %}

{% block header %}
  {{ title_prefix }}
  {{ title_suffix }}
{% endblock %}

{% block content %}
  {% include "@theme/patterns/compositions/card-wrapper.html.twig" with {
    card: {
      title: {
        label: label,
      },
      description: content.field_introduction|default(''),
      image: {
        src: media.image,
        alt: media.alt,
      },
      path: url,
    }
  } only %}
{% endblock %}
