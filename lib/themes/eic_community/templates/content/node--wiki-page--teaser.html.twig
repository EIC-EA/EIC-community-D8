{#
/**
 * @file
 * Theme override to display a wiki_page node.
 *
 * @see ./themes/custom/eic_community/templates/content/node.html.twig
 */
#}
{% extends "@eic_community/content/node.html.twig" %}
{% set display_submitted = false %}
{% set has_wrapper = false %}

{% block content %}
  <div {{ attributes }}>
    {{ title_prefix }}
    {{ title_suffix }}
    {% include "@theme/patterns/compositions/story/story.teaser.html.twig" with story_item|default({})|merge({
      title: node.label|default(''),
      description: story_item.description|striptags|default(''),
      path: url,
      extra_classes: 'ecl-teaser--grey',
    }) %}
  </div>
{% endblock %}
