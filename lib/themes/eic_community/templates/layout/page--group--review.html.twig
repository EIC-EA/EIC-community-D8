{#
/**
 * @file
 * Theme override to display a single page.
 *
 * @see ./themes/custom/eic_community/patterns/layout/base.html.twig
 */
#}
{% set _wrap_content = true %}

{% extends "@theme/patterns/layout/base.html.twig" %}

{% block page_header %}
  {{ page.page_header }}
{% endblock %}

{% block content %}

  <div class="ecl-container" style="padding: 5rem 1rem">
    {% include "@theme/patterns/compositions/state-banner.html.twig" with {
      icon_file_path: '/themes/custom/eic_community/dist/images/sprite/custom/sprites/custom.svg',
      icon: {
        name: 'warning',
        type: 'notifications'
      },
      title: 'Group is under review'|t,
      description: '<p>This group is under review. For more information please contact your group admin.</p>'
      } %}
  </div>

{% endblock %}
