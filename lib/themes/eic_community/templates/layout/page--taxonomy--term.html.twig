{#
/**
 * @file
 * Theme override to display a single page.
 *
 * @see ./themes/custom/eic_community/patterns/layout/base.html.twig
 */
#}
{% set _wrap_content = true %}
{% set sidebar = page.sidebar %}
{% set page = page|merge({'sidebar': null}) %}

{% extends "@theme/patterns/layout/base.html.twig" %}

{% block page_header %}
  {% include "@theme/patterns/compositions/overview-header.html.twig" with {
    title_element: 'h1',
    title: topic_title,
    image: {
      src: banner_image_url
    },
  } only %}
  {{ page.page_header }}
{% endblock %}

{% block content %}
  {% embed "@theme/patterns/compositions/editorial-overview.html.twig" with editorial_article|default({}) %}
    {% block content %}
      {{ page.content }}
    {% endblock %}

    {% block sidebar %}
      {{ sidebar }}
    {% endblock %}
  {% endembed %}

{% endblock %}
