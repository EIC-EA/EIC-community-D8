{#
/**
 * @file
 * Theme override for the branding block.
 *
 * @see ./core/modules/system/templates/block--system-branding-block.html.twig
 */
#}
{% block content %}
  <a
    class="ecl-link ecl-link--standalone ecl-site-header-{{ ecl_branding }}__logo-link"
    href="{{ site_logo_href }}"
    aria-label="{{ site_name }}"
  >
    {% if ecl_component_library == 'eu' %}
      <img
        alt="{{ site_logo_alt }}"
        title="{{ site_name }}"
        class="ecl-site-header-{{ ecl_branding }}__logo-image-mobile"
        src="{{ ecl_logo_path ~ '/condensed-version/positive/' ~ current_language_id|to_internal_language_id ~ '.svg'}}"
      />
    {% endif %}
    <img
      alt="{{ site_logo_alt }}"
      title="{{ site_name }}"
      class="ecl-site-header-{{ ecl_branding }}__logo-image ecl-site-header-{{ ecl_branding }}__logo-image-desktop"
      src="{{ ecl_logo_path ~ '/logo--' ~ current_language_id|to_internal_language_id ~ '.svg'}}"
    />
  </a>
{% endblock %}
