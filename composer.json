{
    "name": "eic-ea/eic-community-d8",
    "description": "The EIC community Drupal 8 Platform.",
    "type": "project",
    "license": "EUPL-1.2",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.2",
        "composer/installers": "^1.5",
        "cweagans/composer-patches": "^1.0",
        "drupal/address": "^1.9",
        "drupal/admin_toolbar": "^3.0",
        "drupal/block_content_permissions": "^1.10",
        "drupal/components": "^2.2",
        "drupal/core": "^8.7",
        "drupal/core-composer-scaffold": "^8.8",
        "drupal/default_content": "^2.0@alpha",
        "drupal/extra_field": "^2.0",
        "drupal/flag": "^4.0@beta",
        "drupal/fragments": "^2.0",
        "drupal/group": "^1.3",
        "drupal/metatag": "^1.15",
        "drupal/paragraph_view_mode": "^2.0",
        "drupal/paragraphs": "^1.12",
        "drush/drush": "^9.0",
        "openeuropa/composer-artifacts": "~0.1",
        "openeuropa/oe_media": "^1.11",
        "openeuropa/oe_profile": "^0.4",
        "openeuropa/oe_theme": "^2.0",
        "openeuropa/oe_webtools": "^1.10",
        "webflo/drupal-finder": "^1.0",
        "webmozart/path-util": "^2.3"
    },
    "require-dev": {
        "drupal/drupal-extension": "~4.0",
        "ec-europa/toolkit": "~4.0.0-beta7",
        "drupal/core-dev": "^8.7"
    },
    "scripts": {
        "post-install-cmd": [
            "DrupalComposer\\DrupalScaffold\\Plugin::scaffold"
        ]
    },
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    },
    "extra": {
        "artifacts": {
            "openeuropa/oe_theme": {
                "dist": {
                    "url": "https://github.com/{name}/releases/download/{pretty-version}/{project-name}-{pretty-version}.tar.gz",
                    "type": "tar"
                }
            }
        },
        "composer-exit-on-patch-failure": true,
        "patches-file": "composer.patches.json",
        "enable-patching": true,
        "drupal-scaffold": {
            "locations": {
                "web-root": "./web"
            }
        },
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OpenEuropa\\Site\\Tests\\": "./tests/"
        }
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "config": {
        "sort-packages": true
    }
}
